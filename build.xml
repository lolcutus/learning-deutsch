<project name="germana" basedir="." default="createjar" >
	<property name="build" value="build"/>
	<property name="extlibs" value="extlibs"/>
	<property name="mainclass" value="ro.cuzma.tools.germana..ui.TestDialogs"/>
	<target name="clean">
		<delete dir="${build}"/>
	</target>
	<target name="init" depends="clean">
		<mkdir dir="${build}"/>
	</target>
	<target name="createjar" depends="init">
		<mkdir dir="build" />
		<jar destfile="${build}/${ant.project.name}.jar">
		    <fileset dir="./bin"
		             excludes="build.xml"
		    />
 			<manifest>
 				<attribute name="Main-Class" value="${mainclass}"/>
            </manifest>
		 </jar>
	</target>
</project>